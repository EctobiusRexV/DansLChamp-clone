<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.SubScene?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sim.danslchamp.controllersApp.ControllerPrincipal">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu text="_Fichier">
            <items>
                  <MenuItem text="_Nouveau">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem onAction="#ouvrirCircuit" text="_Ouvrir">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem text="_Enregistrer">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
              <MenuItem onAction="#enregistrerCircuit" text="Enregistrer _sous..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#fermerRetour" text="Fermer" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Bibliothèque">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showBibliotheque" text="Ouvrir la bibliothèque de composants" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Aide">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showAide" text="Informations sur l'application" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="À propos">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showAPropos" text="Informations sur les créateurs" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <SplitPane dividerPositions="0.5, 0.5" BorderPane.alignment="CENTER">
         <items>
            <VBox fx:id="vBox2D" alignment="CENTER" minWidth="0.0" prefHeight="200.0" prefWidth="100.0" />
            <VBox fx:id="vBox3D" minWidth="0.0">
               <children>
                  <SubScene fx:id="subScene3D" height="200.0" width="200.0" VBox.vgrow="ALWAYS">
                    <root>
                      <Region />
                    </root>
                  </SubScene>
               </children>
            </VBox>
            <TabPane minWidth="0.0" prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Composantes">
                     <content>
                        <ListView fx:id="composantesListView" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                </Tab>
              </tabs>
            </TabPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
