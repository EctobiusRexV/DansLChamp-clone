<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="100.0" minWidth="100.0" prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sim.danslchamp.controllersApp.SplashScreenController" >
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu text="_Fichier">
            <items>
              <MenuItem onAction="#ouvrirCircuit" text="_Ouvrir">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#fermerApp" text="Fermer" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Bibliothèque">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showBibliotheque" text="Ouvrir la Bibliothèque de composants" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Aide">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showAide" text="Informations sur l'application" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="À propos">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showAPropos" text="Informations sur les créateurs" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Circuits Récents :" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox onMouseClicked="#circuitPressed" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="labelHautGauche" alignment="BOTTOM_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Label" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox onMouseClicked="#circuitPressed" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="labelHautMilieu" alignment="BOTTOM_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Label" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#circuitPressed" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="labelHautDroite" alignment="BOTTOM_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Label" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label text="Circuits de base :" />
            <FlowPane fx:id="circuitsRecentsFlowPane" prefHeight="200.0" prefWidth="200.0" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
